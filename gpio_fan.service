[Unit]
Description=Control gpio fan control service
After=multi-user.target

[Service]
Type=forking
ExecStart=/usr/bin/python3 /opt/gpio_fan/main.py --pid /var/run/gpio_fan.pid --log /var/log/gpio_fan/gpio_fan.log
Restart=always
PIDFile=/var/run/gpio_fan.pid
WorkingDirectory=/opt/gpio_fan
ExecStop=/bin/kill $MAINPID

[Install]
WantedBy=multi-user.target
